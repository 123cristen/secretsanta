<% if @group.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      The form contains <%= "#{@group.errors.count} errors" %>.
    </div>
    <ul>
    <% @group.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>