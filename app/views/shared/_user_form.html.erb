<%= form_for(@user) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  	<%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control' %>

  <%= f.submit "Add member", class: "btn btn-primary" %>
<% end %>