<h1>Edit Group</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@group) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name, "Group name" %>
      <%= f.text_field :name, class: 'form-control' %>

      <%= f.label :password, "Group password" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Group password confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>
    <%= link_to "delete", group, method: :delete,
                                  data: { confirm: "Are you sure you want to delete your group? :(" } %>
  <% end %>
  </div>
</div>